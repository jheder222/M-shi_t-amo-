    <div class="game-container">
        <h3>ğŸ® Juego: Encuentra el corazÃ³n â¤ï¸</h3>
        <canvas id="gameCanvas" width="300" height="300"></canvas>
        <div id="gameMessage"></div>
    </div>
    <script>
        function mostrarJuego() {
            document.querySelector('.game-container').style.display = 'block';
        }

        // Juego: Encuentra el corazÃ³n
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const heart = new Image();
        heart.src = 'https://upload.wikimedia.org/wikipedia/commons/e/e4/Love_Heart_SVG.svg';

        const heartPosition = {
            x: Math.random() * (canvas.width - 50),
            y: Math.random() * (canvas.height - 50),
            size: 50
        };

        heart.onload = () => {
            ctx.drawImage(heart, heartPosition.x, heartPosition.y, heartPosition.size, heartPosition.size);
        };

        canvas.addEventListener('click', (event) => {
            const rect = canvas.getBoundingClientRect();
            const x = event.clientX - rect.left;
            const y = event.clientY - rect.top;

            if (
                x >= heartPosition.x &&
                x <= heartPosition.x + heartPosition.size &&
                y >= heartPosition.y &&
                y <= heartPosition.y + heartPosition.size
            ) {
                document.getElementById('gameMessage').innerText = 'Â¡Felicidades, encontraste el corazÃ³n! â¤ï¸ Te amo mucho. ğŸ’–';
            } else {
                document.getElementById('gameMessage').innerText = 'Â¡Sigue buscando! ğŸ’Œ. Recuerda que mi amor por ti no tiene fin.';
            }
        });
    </script>
